10 PRINT "Press any key to start, then ctrl+c  to exit"
20 WAITKEY
30 PLACEMENTLIMIT = 999
32 INK 1 , 0 , 1 , 0
35 INK 2 , 0 , 2 , 0
38 INK 3 , 0 , 3 , 0
40 INK 4 , 0 , 4 , 0
50 CLS
60 FOR I = 1 TO 30
70 GOSUB 300
80 NEXT I
85 PLACEMENTLIMIT = 120
90 FOR I = 0 TO 999 STEP 1
95 THISCELL = 999 - I
100 CELLCH = PEEKS ( THISCELL , 0 )
110 CELLCO = PEEKS ( THISCELL , 1 )
120 IF CELLCH = 32 THEN 220
130 IF CELLCO < 2 THEN 160
140 POKES THISCELL , 1 , CELLCO - 1
145 POKES THISCELL , 0 , CELLCH
150 GOTO 170
160 POKES THISCELL , 0 , 32
165 GOTO 220
170 IF THISCELL <= 959 THEN 200
180 ON CELLCO = 4 GOSUB 300
190 GOTO 220
200 POKES THISCELL + 40 , 0 , RNDINT ( 0 , 255 )
210 POKES THISCELL + 40 , 1 , CELLCO
220 NEXT I
230 REFRESH
250 GOTO 90
300 REM NEW RAINDROP
310 RCELL = RNDINT ( 0 , PLACEMENTLIMIT )
320 POKES RCELL , 0 , RNDINT ( 0 , 255 )
330 POKES RCELL , 1 , 4
340 RETURN
